<div class="apt-listing">
  {{#each apartment in model}}
    {{#md-card title=apartment.address
        image=apartment.photoUrl
        activator=true
        id="card-reveal"}}

        {{#md-card-content}}
          <br>Price: ${{apartment.price}}
          <br>Available? {{apartment.available}}
          <br>{{link-to 'Edit' 'apartments.edit' apartment}}
          {{md-btn text='Delete'
                   action="delete"
                   actionArg=apartment
                   class='teal accent-3'}}
        {{/md-card-content}}

        {{#md-card-reveal}}
          Source: {{apartment.listingUrl}}
          <br>Description:<br>
          {{apartment.description}}
        {{/md-card-reveal}}

    {{/md-card}}

